{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-host",
      "type": "npm",
      "script": "start",
      "path": "angular-mfe-example/projects/host",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Compiled successfully."
        }
      }
    },
